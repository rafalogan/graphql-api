    "@types/md5": "^2.3.2",
    "@types/module-alias": "^2.0.1",
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.11.15",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.8",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.29.0",

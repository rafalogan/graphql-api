{
  "name": "graphql-api",
  "version": "1.0.0",
  "description": "this API is a refactor of final Project of course GraphQL: Criando APIs Profissionais e Flex√≠veis",
  "main": "index.js",
  "scripts": {
    "start": "npx pm2-runtime start ecosystem.config.yml",
    "stop": "npx pm2 kill",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "style": "prettier --check 'src/**/*.ts' 'test/**/*ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*ts'",
    "dev": "nodemon ./index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:database": "docker-compose down && docker-compose up",
    "stop:database": "docker-compose down",
    "knex:migrate:make": "npx knex migrate:make --knexfile knexfile.ts -x ts",
    "knex:migrate:latest": "npx knex migrate:latest --knexfile knexfile.ts",
    "knex:migrate:rollback": "npx knex migrate:rollback --knexfile knexfile.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafalogan/graphql-api.git"
  },
  "keywords": [
    "API",
    "Node",
    "Node.js",
    "GraphQL",
    "Apollo-server",
    "typescript"
  ],
  "author": "RafaLogan - www.rafadraw@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafalogan/graphql-api/issues"
  },
  "homepage": "https://github.com/rafalogan/graphql-api#readme",
